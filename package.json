{
  "name": "m-fe-rtw",
  "version": "0.0.1",
  "description": "Micro-Frontend Boilerplate, with React & TS & Webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/wx-chevalier/fe-boilerplates"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "redux",
    "mobx",
    "webpack",
    "typescript"
  ],
  "author": "wx-chevalier@github",
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{ts,tsx,scss,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "bootstrap": "npm run clean && yarn install",
    "build": "npm run clean && yarn workspaces run build",
    "clean": "yarn workspaces run clean",
    "cleanCov": "rimraf @coverage",
    "dev": "webpack-dev-server --config ./scripts/webpack/webpack.config.dev.js --hot",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "precommit": "lint-staged",
    "prettier-all": "prettier --write 'src/**/*' '!src/{assets,datas}/**'",
    "start": "webpack-dashboard -- npm run dev",
    "test": "jest --config ./scripts/jest/jest.config.js",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm run cleanCov && npm test -- --coverage",
    "upgrade": "./scripts/tools/upgrade_pkgs.sh"
  },
  "devDependencies": {
    "@types/jest": "24.0.9",
    "@types/react-dom": "^16.8.2",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0",
    "autoprefixer": "9.4.10",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^5.0.0",
    "css-loader": "2.1.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^5.16.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.13.0",
    "file-loader": "3.0.1",
    "fork-ts-checker-webpack-plugin": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "jest": "24.3.1",
    "jest-cli": "24.3.1",
    "jest-fetch-mock": "^2.1.2",
    "json-server": "0.14.2",
    "less": "^3.10.3",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "parallelshell": "^3.0.2",
    "postcss-loader": "3.0.0",
    "react-hot-loader": "^4.8.0",
    "resolve-url-loader": "3.0.1",
    "rimraf": "^2.6.3",
    "style-loader": "0.23.1",
    "terser-webpack-plugin": "^1.4.1",
    "ts-jest": "^24.0.0",
    "ts-loader": "5.3.3",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "3.3.3333",
    "uglifyjs-webpack-plugin": "2.1.2",
    "url-loader": "^1.1.2",
    "wasm-loader": "^1.3.0",
    "webpack": "^4.29.6",
    "webpack-cli": "3.2.3",
    "webpack-dashboard": "3.0.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-theme-color-replacer": "^1.2.17",
    "workerize-loader": "^1.0.4"
  },
  "private": true,
  "workspaces": [
    "packages/rtw-bootstrap",
    "packages/rtw-core",
    "packages/rtw-components",
    "packages/rtw-host-app"
  ]
}
